<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
    <persistence-unit name="ClarksnutPU" transaction-type="JTA">
        <!--<jta-data-source>java:jboss/datasources/ClarksnutDS</jta-data-source>-->

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!--Hibernate ORM-->
            <property name="jboss.as.jpa.providerModule"
                      value="org.hibernate:${version.hibernate}"/>

            <property name="hibernate.show_sql"
                      value="${env.CN_HIBERNATE_SHOW_SQL:false}"/>
            <property name="hibernate.format_sql"
                      value="${env.CN_HIBERNATE_FORMAT_SQL:false}"/>
            <property name="hibernate.cache.use_second_level_cache"
                      value="${env.CN_HIBERNATE_SECOND_LEVEL_CACHE:true}"/>

            <!--Hibernate SEARCH-->
            <property name="wildfly.jpa.hibernate.search.module"
                      value="org.hibernate.search.orm:${version.hibernate-search}"/>

            <property name="hibernate.search.default.indexmanager"
                      value="${env.CN_HIBERNATE_INDEX_MANAGER:directory-based}"/>

            <property name="hibernate.search.model_mapping"
                      value="org.clarksnut.documents.jpa.config.DocumentSearchMappingFactory"/>
            <property name="hibernate.search.lucene.analysis_definition_provider"
                      value="org.clarksnut.documents.jpa.config.ClarksnutLuceneAnalyzerProvider"/>
            <property name="hibernate.search.elasticsearch.analysis_definition_provider"
                      value="org.clarksnut.documents.jpa.config.ClarksnutESAnalyzerProvider"/>

            <!--Elasticsearch-->
            <property name="hibernate.search.default.elasticsearch.host"
                      value="${env.CN_ELASTICSEARCH_HOST:}"/>
            <property name="hibernate.search.default.elasticsearch.username"
                      value="${env.CN_ELASTICSEARCH_USER:}"/>
            <property name="hibernate.search.default.elasticsearch.password"
                      value="${env.CN_ELASTICSEARCH_PASSWORD:}"/>
            <property name="hibernate.search.default.elasticsearch.index_schema_management_strategy"
                      value="${env.CN_ELASTICSEARCH_INDEX_SCHEMA_MANAGEMENT_STRATEGY:update}"/>
            <property name="hibernate.search.default.elasticsearch.required_index_status"
                      value="${env.CN_ELASTICSEARCH_REQUIRED_INDEX_STATUS:green}"/>

            <property name="hibernate.search.default.elasticsearch.aws.signing.enabled"
                      value="${env.CN_ELASTICSEARCH_AWS_ENABLED:false}"/>
            <property name="hibernate.search.default.elasticsearch.aws.access_key"
                      value="${env.CN_ELASTICSEARCH_AWS_ACCESS_KEY:}"/>
            <property name="hibernate.search.default.elasticsearch.aws.secret_key"
                      value="${env.CN_ELASTICSEARCH_AWS_SECRET_KEY:}"/>
            <property name="hibernate.search.default.elasticsearch.aws.region"
                      value="${env.CN_ELASTICSEARCH_AWS_REGION:}"/>
        </properties>
    </persistence-unit>
</persistence>
